<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="card shadow-sm mt-5" style="border-radius: 18px;">
                    <div class="card-body">
                        <h4 class="" style="text-align: center;">Send Email to Reset Password</h4>
                        <div class="row d-flex align-items-center">
                            <div class="col-md-12">
                                <form class="row d-flex align-items-center justify-content-center"
                                    onsubmit="sendEmail(event)">

                                    <div class="col-md-12">
                                        <label for="email" class="form-label text-center">
                                            Enter Email to Send password reset link
                                        </label>
                                        <input type="email" class="form-control" id="email" name="email">
                                    </div>
                                    <div class="mt-4 position-sticky bg-white w-100" style="bottom: 0px;">
                                        <div class="border-top d-flex justify-content-between">
                                            <div>
                                                <a href="/login" class="btn btn-lg btn-primary mt-4">Back</a>
                                            </div>
                                            <div>
                                                <button id="sendBtn" type="submit"
                                                    class="btn btn-lg btn-dark mt-4 ms-3">Send</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



    </div>


    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="js/registration.js"></script> -->

    <!-- registeration and send request script -->
    <script>
        const sendBtn = document.getElementById("sendBtn")
        const email = document.getElementById("email")

        async function sendEmail(event) {
            event.preventDefault()
            await $.ajax({
                type: 'POST',
                url: '/sendResetLink',
                data: { email: email.value },
                success: function (response) {
                    // Handle success response
                    console.log(response.message, "Sms from backedn");
                    if (response.message === "Check your email") {
                        alert("Reset Link Sent on your Email")
                    }
                    else {
                        alert("Enter a Valid Email")
                    }
                },
                error: function (xhr, status, error) {
                    // Handle error
                    console.error(error);
                }
            });

        }



    </script>
</body>


